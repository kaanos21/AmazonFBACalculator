@model AmazonFbaUI.Dtos.UsaToAudDto.CreateUsaToAuProductDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Yeni Ürün Ekle</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CreateProduct", "ProductUsaToAud", FormMethod.Post))
                        {
                            <div class="mb-3">
                                <label class="form-label">ASIN</label>
                                @Html.TextBoxFor(x => x.Asin, new { @class = "form-control", required = "required" })
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">FBA Fee</label>
                                    @Html.TextBoxFor(x => x.FbaFee, new { @class = "form-control", type = "any", step = "0.01", required = "required" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Quantity</label>
                                    @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", type = "any", required = "required" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">USA Price</label>
                                    @Html.TextBoxFor(x => x.UsaPrice, new { @class = "form-control", type = "any", required = "required" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">AU Price</label>
                                    @Html.TextBoxFor(x => x.AuPrice, new { @class = "form-control", type = "any", required = "required" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Weight (kg)</label>
                                    @Html.TextBoxFor(x => x.WeightKg, new { @class = "form-control", type = "any", required = "required" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Surcharge</label>
                                    @Html.TextBoxFor(x => x.Surcharge, new { @class = "form-control", type = "any", required = "required" })
                                </div>
                            </div>

                            <!-- Analysis Textarea -->
                            <div class="mb-3">
                                <label class="form-label">Analysis</label>
                                @Html.TextAreaFor(x => x.Analysis, new { @class = "form-control", rows = "4", placeholder = "Ürün analizi burada yer alacak." })
                            </div>

                            <div class="text-end">
                                <button type="submit" class="btn btn-success px-4">Kaydet</button>
                                <a href="/UsaToAu/Index" class="btn btn-secondary">İptal</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
