@{
    Layout = null;
    var analysisResult = ViewBag.Analysis as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Ürün Analizi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: #f8f9fa;
        }

        .container {
            margin-top: 100px;
            max-width: 600px;
        }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            padding: 2rem;
        }

        .result-box {
            background-color: #e9ecef;
            border-radius: 0.5rem;
            padding: 1rem;
            font-size: 1.1rem;
            font-weight: 500;
            color: #343a40;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card text-center">
            <h2 class="mb-4">Yapay Zeka Ürün Analizi</h2>

            @if (!string.IsNullOrWhiteSpace(analysisResult))
            {
                <div class="result-box">
                    <strong>Analiz Sonucu:</strong> @analysisResult
                </div>
            }
            else
            {
                <p class="text-muted">Gösterilecek analiz verisi bulunamadı.</p>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
