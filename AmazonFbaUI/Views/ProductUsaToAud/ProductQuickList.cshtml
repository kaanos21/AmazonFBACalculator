@model IEnumerable<AmazonFbaUI.Dtos.UsaToAudDto.ProductQuickListDto>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-sm rounded">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>ASIN</th>
                        <th>Quantity</th>
                        <th>USA Price</th>
                        <th>AU Price</th>
                        <th>Earn AUD</th>
                        <th>ROI (%)</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Asin</td>
                                <td>@item.Quantity</td>
                                <td>@item.UsaPrice</td>
                                <td>@item.AuPrice</td>
                                <td>@item.EarnAud</td>
                                <td>@item.roi</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/ProductUsaToAud/DeleteProduct/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                        <a href="/ProductUsaToAud/ProductDetail/@item.Id" class="btn btn-secondary btn-sm">Detaylar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center">Gösterilecek veri bulunamadı.</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="/ProductUsaToAud/CreateProduct" class="btn btn-success btn-lg px-5">Ürün Ekle</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
